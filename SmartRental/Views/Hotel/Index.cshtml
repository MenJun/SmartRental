    <div class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-body">
                        <table id="HotelCategoryList" style="width: 100%;" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr role="row">
                                    <th>酒店名称</th>
                                    <th>酒店城市</th>
                                    <th>酒店类型</th>
                                    <th>酒店老板</th>
                                    <th>酒店电话</th>
                                    <th>酒店注册时间</th>
                                    <th>注册状态</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr role="row">
                                    <td>@item.HotelName</td>
                                    <td>@item.HotelCity</td>
                                    <td>@item.HotelType</td>
                                    <td>@item.HotelBoss</td>
                                    <td>@item.HotelPhone</td>
                                    <td>@item.Hoteltration_time</td>
                                    @if (item.HotelRatify == null)
                                    {
                                        <td>
                                            审核中
                                        </td>
                                    }
                                    else
                                    {
                                        if(item.HotelRatify == true)
                                        {
                                            <td>
                                                已通过
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                               已拒绝
                                            </td>
                                        }
                                    }

                                    <td>
                                        <button type="submit">通过</button>
                                        <button type="submit">拒绝</button>
                                        <button type="submit">查看详情</button>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
