<script type="text/javascript">


    function Upload() {
        var param = new FormData(($("#regFrm")[0]));
        $.ajax({
            url: "/common/RoomUpload.ashx",
            data: param,
            type: "post",
            processData: false,
            contentType: false,
            success: function (data) {
                alert(data)
            }


        })
    }


    function xmTanUploadImg(obj) {
        var imgTypes = new Array();
        imgTypes[0] = "JPG";
        imgTypes[1] = "ICO";
        imgTypes[2] = "PNG";
        imgTypes[3] = "GIF";
        imgTypes[4] = "JPEG";
        imgTypes[5] = "TGA";
        var num = 0;//选错图片格式的个数
        var fl = obj.files.length;
        document.getElementById("showimg").innerText = null;
        if (fl <= 7) {

            for (var i = 0; i < fl; i++) {
                var file = obj.files[i];
                //判断图片格式
                var filename = obj.files[i].name;
                imgType = filename.substring(filename.lastIndexOf(".") + 1, file.length)
                var reader = new FileReader();
                //判断是否是图片格式
                if (imgType.toUpperCase() == imgTypes[0] || imgType.toUpperCase() == imgTypes[1] || imgType.toUpperCase() == imgTypes[2] || imgType.toUpperCase() == imgTypes[3] || imgType.toUpperCase() == imgTypes[4] || imgType.toUpperCase() == imgTypes[5]) {
                    reader.onload = function (e) {

                        img = document.createElement("img");
                        img.src = this.result;
                        img.style.width = "80px";
                        img.style.height = "100px";
                        document.getElementById("showimg").appendChild(img);
                        $("#upload").attr("disabled", false);
                    }
                } else {
                    num++;
                    alert("你选择的图片格式不正确:" + num + "张图片格式不正确");
                    $("#upload").attr("disabled", true);
                }

                reader.readAsDataURL(file);
            }
        } else {

            alert("每次只能上传7张图片");
        }

    }
</script>
<script>
    $(function () {
        $("#regFrm").validate({
            rules: {
                RoomName: { required: true },
                RoomLayout: {
                    required: true,


                },
                MattresID: { required: true, },
                RoomCount: {
                    required: true,
                    max: 100,
                    min: 1,
                },
                RoomPrice: { required: true, min: 1, },
                RoomTypeID: { required: true },
                PrimeCost: { required: true, min: 1, },
                file: { required: true },
                "RoomFacility": {
                    required: true,
                    minlength: 2
                },
            },
            messages: {
                RoomName: { required: "房间名不能为空" },
                RoomLayout: {
                    required: "请输入房间布局(说明房间布局大小等)"


                },
                RoomCount: {
                    reqiored: "数了量不能为空",
                    max: "房间数量不能超过100",
                    min: "房间数量不能低于1"
                },
                MattresID: { required: "床型" },
                RoomPrice: {
                    required: "请输入房间原价",

                    min: "价格不能低于0",
                },
                PrimeCost: { required: "请输入房间实际价格", min: "价格不能低于0", },
                file: { required: "图片不能为空" },
                "RoomFacility": {
                    required: "请选择酒店设施",
                    minlength: "最少选择二个"
                },
            },
        })

    });
</script>
