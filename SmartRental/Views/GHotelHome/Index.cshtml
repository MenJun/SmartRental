@using (Html.BeginForm("Index", "GHotelHome", System.Web.Mvc.FormMethod.Post, new { id = "regFrm", name = "regFrm" }))
{

    <div style="margin:0 auto">
        <div style="width:600px;float:left;margin-left:30px">
            <p>
                <label style="width:100px">房间名称:</label>
                <input type="text" name="RoomName" id="RoomName" style="width:300px" placeholder="请输入房间名称请输入房间名称">@Html.ValidationMessage("RoomName")
            </p>
            <p>
                <label style="width:100px">房间布局：</label>

                <input type="text" name="RoomLayout" style="width:300px" id="RoomLayout" placeholder="请输入房间布局">@Html.ValidationMessage("RoomLayout")
            </p>
            <p>
                <label style="width:100px">房间数量:</label>
                <input type="text" style="width:300px" id="RoomCount" name="RoomCount">
                @Html.ValidationMessage("RoomCount")
            </p>
            <p>
                <label style="width:100px;">是否有早餐:</label>
                <input type="radio" id="Boolbreakfast" name="Boolbreakfast" value="true" checked="checked">是
                <input type="radio" id="Boolbreakfast" name="Boolbreakfast" value="false">否
                @Html.ValidationMessage("Boolbreakfast")
            </p>
            <p>
                <label style="width:100px">房型:</label>
                <select name="RoomTypeID" id="RoomTypeID" style="height:35px;width:300px">
                    @foreach (var item in ViewBag.RoomType)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>@Html.ValidationMessage("RoomTypeID")
            </p>
            <p>

                <label style="width:100px">房间设施:</label>
                <fieldset id="newsletter_topics" style="margin-left:120px; margin-top:-30px">

                    <input type="checkbox" style="background-color:transparent;height:0px;width:0px;" name="RoomFacility" value="热水">
                    <input type="checkbox" name="RoomFacility" value="热水">热水
                    <input type="checkbox" name="RoomFacility" value="空调">空调
                    <input type="checkbox" name="RoomFacility" value="WIFI">WIFI
                    <input type="checkbox" name="RoomFacility" value="电脑">电脑
                    <input type="checkbox" name="RoomFacility" value="沙发">沙发
                    <br />
                    <input type="checkbox" name="RoomFacility" value="吹风机">吹风机
                    <input type="checkbox" name="RoomFacility" value="电视">电视
                    <input type="checkbox" name="RoomFacility" value="电热水壶">电热水壶
                    <input type="checkbox" name="RoomFacility" value="麻将桌">麻将桌
                    <input type="checkbox" name="RoomFacility" value="拖鞋">拖鞋
                </fieldset>
            </p>
        </div>



        <div style="width:600px;float:right;">
            <p>
                <label style="width:100px">床型：</label>
                <select name="MattresID" id="MattresID" style="height:35px;width:300px">
                    @foreach (var item in ViewBag.Mattres)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>@Html.ValidationMessage("MattresID")
            </p>
            <p>
                <label style="width:100px">房间原价：</label>
                <input type="text" name="PrimeCost" id="PrimeCost" style="width:300px" placeholder="请输入房间原价"> @Html.ValidationMessage("PrimeCost")
            </p>
            <p>
                <label style="width:100px">房间实价：</label>
                <input type="text" name="RoomPrice" id="RoomPrice" style="width:300px" placeholder="请输入房间实价"> @Html.ValidationMessage("RoomPrice")
            </p>
            <p>
                <label style="width:100px;">酒店图片：</label>@Html.ValidationMessage("file")
                <input type="file" name="file" id="file" multiple="multiple" onchange="xmTanUploadImg(this)" />


                <!--图片显示位置-->
                <div id="showimg" style="height:200px;width:320px; background-color:beige">

                </div>
            </p>
        </div>

      
    </div>
    <div style="text-align:center;margin:0 auto">
        <input type="submit" value="提交" style="height:30px;width:100px;background-color:aqua;border:none;font-weight:900; margin-top:500px;margin-left:-200px" onclick="Upload()">

        <br />   <label>酒店名称：</label>
        <select name="HotelID" class="form-control" style="height:35px;width:300px">
            @foreach (var item in ViewBag.HotelName)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>

    </div>

}
